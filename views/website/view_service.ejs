<% layout('layout') -%>
<% var title = 'view service'; %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<!-- ====== HEADER START ====== -->
<nav class="navbar navbar-expand-lg bg-light border-bottom py-2">
  <div class="container">
    
    <!-- Logo -->
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/logo.png" alt="Logo" height="45" class="me-2">
      <strong>live Pcsy</strong>
    </a>
    <!-- Mobile Menu Button -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- NAV LINKS -->
    <div class="collapse navbar-collapse" id="mainNavbar">
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li>
        <li class="nav-item"><a class="nav-link" href="/services">Services</a></li>
        <li class="nav-item"><a class="nav-link" href="/contact">Contact Us</a></li>
      </ul>

      <!-- Social Icons -->
      <div class="d-flex gap-2">
        <a href="#" class="social-box"><i class="fab fa-facebook-f"></i></a>
        <a href="#" class="social-box"><i class="fab fa-instagram"></i></a>
        <a href="#" class="social-box"><i class="fab fa-telegram"></i></a>
        <a href="#" class="social-box"><i class="fab fa-youtube"></i></a>
      </div>
    </div>
  </div>
</nav>
<!-- ====== HEADER END ====== -->
<style>
  .nav-link {
    font-weight: 500;
    padding: 8px 15px;
  }
  .nav-link:hover {
    color: #7b61ff;
  }

  .social-box {
    width: 38px;
    height: 38px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f1f1f1;
    border-radius: 8px;
    font-size: 17px;
    color: #464646;
    transition: .3s ease;
  }
  .social-box:hover {
    background: #7b61ff;
    color: #fff;
    transform: translateY(-2px);
  }

  .navbar-brand strong {
    font-size: 20px;
  }
</style>

<section class="py-5" style="background:#f7ecff;">
  <div class="container">

    <!-- Top: Breadcrumb + Title + Back button -->
    <div class="mb-4 d-flex justify-content-between align-items-center flex-wrap gap-2">
      <div>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-2">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/services">Services</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= service.title %></li>
          </ol>
        </nav>
        <h2 class="mb-0"><%= service.title %></h2>
      </div>

      <a href="/services" class="btn btn-outline-secondary btn-sm">
        &larr; Back to all services
      </a>
    </div>

    <div class="row g-4">
      <!-- LEFT: Service details -->
      <div class="col-lg-8">
        <div class="card shadow-sm border-0 rounded-4">
          <div class="card-body p-4">
            
            <!-- Price + Duration badges -->
            <div class="d-flex flex-wrap align-items-center mb-3 gap-3">
              <span class="badge rounded-pill px-3 py-2" style="background:rgba(123,97,255,.1); color:#7b61ff;">
                <i class="far fa-clock me-1"></i> <%= service.duration_minutes %> mins session
              </span>
              <span class="badge rounded-pill px-3 py-2" style="background:rgba(255,139,44,.1); color:#ff8b2c;">
                Fee: $<%= Number(service.price).toFixed(2) %>
              </span>
            </div>

            <h5 class="mb-3">Service Overview</h5>
            <p class="text-muted" style="line-height:1.7;">
              <%= service.description %>
            </p>

            <hr>

            <h5 class="mb-3">What you can expect</h5>
            <ul class="list-unstyled mb-0">
              <li class="mb-2">
                <i class="far fa-check-circle me-2"></i>
                Personalised one-on-one guidance
              </li>
              <li class="mb-2">
                <i class="far fa-check-circle me-2"></i>
                Safe & confidential conversation
              </li>
              <li class="mb-2">
                <i class="far fa-check-circle me-2"></i>
                Practical steps to move forward
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- RIGHT: Booking card -->
      <div class="col-lg-4">
        <div class="card shadow-sm border-0 rounded-4">
          <div class="card-body p-4">
            <h5 class="mb-3">Book this service</h5>
            <p class="small text-muted">
              Fill in your details and our team will confirm your appointment shortly.
            </p>

            <form action="/appointments" method="POST" class="mt-3">
              <!-- Hidden fields: service info -->
              <input type="hidden" name="service_id" value="<%= service.id %>">
              <input type="hidden" name="service_title" value="<%= service.title %>">

              <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text" name="full_name" class="form-control" required>
              </div>

              <div class="mb-3">
                <label class="form-label">Mobile No</label>
                <input type="tel" name="mobile" class="form-control" required>
              </div>

              <div class="mb-3">
                <label class="form-label">Email ID</label>
                <input type="email" name="email" class="form-control" required>
              </div>

              <div class="mb-3">
                <label class="form-label">Message</label>
                <textarea name="message" rows="3" class="form-control" placeholder="Share anything specific you want to discuss..." required></textarea>
              </div>

              <button type="submit"
                      class="btn w-100 text-white fw-semibold"
                      style="border-radius:30px;background:linear-gradient(90deg,#7b61ff,#ff8b2c);">
                Book Appointment
              </button>
            </form>
          </div>
        </div>

        <div class="mt-3 small text-muted">
          <i class="far fa-shield-alt me-1"></i> 100% private & confidential
        </div>
      </div>
    </div>
  </div>
</section>
