<style>
  .nav-link {
    font-weight: 500;
    padding: 8px 15px;
  }
  .nav-link:hover {
    color: #7b61ff;
  }

  .social-box {
    width: 38px;
    height: 38px;
    display: flex;
    align-items: center;
