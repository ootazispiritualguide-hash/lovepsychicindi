<style>
  .nav-link {
    font-weight: 500;
    padding: 8px 15px;
  }
  .nav-link:hover {
    color: #7b61ff;
  }

  .social-box {
    width: 38px;
    height: 38px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f1f1f1;
    border-radius: 8px;
    font-size: 17px;
    color: #464646;
    transition: .3s ease;
  }
  .social-box:hover {
    background: #7b61ff;
    color: #fff;
    transform: translateY(-2px);
  }

  .navbar-brand strong {
    font-size: 20px;
  }
</style>

<style>
  .blog-section-title {
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  .blog-card {
    border: none;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0,0,0,0.08);
    transition: transform .3s ease, box-shadow .3s ease;
    background: #fff;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .blog-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 15px 28px rgba(0,0,0,0.12);
  }

  .blog-card-img {
    height: 180px;
    object-fit: cover;
    width: 100%;
  }

  .blog-card-body {
    padding: 15px 18px 18px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .blog-category {
    display: inline-block;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    background: #f3e8ff;
    padding: 4px 10px;
    border-radius: 999px;
    margin-bottom: 10px;
    color: #7b61ff;
    font-weight: 600;
  }

  .blog-title {
    font-size: 16px;
    font-weight: 700;
    margin-bottom: 8px;
  }

  .blog-content {
    font-size: 14px;
    color: #555;
    margin-bottom: 10px;
  }

  .blog-meta {
    font-size: 12px;
    color: #888;
  }

  .blog-readmore {
    margin-top: auto;
    display: flex;
    justify-content: flex-end;
  }

  .blog-readmore a {
    font-size: 13px;
    font-weight: 600;
    text-decoration: none;
    color: #7b61ff;
    display: inline-flex;
    align-items: center;
    gap: 4px;
    transition: .3s ease;
  }

  .blog-readmore a:hover {
    transform: translateX(3px);
  }
</style>

<section class="py-5">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="blog-section-title mb-0">Latest Blog Posts</h3>
      <!-- future: add "Add New Post" button for admin if needed -->
    </div>

    <% if (!posts || posts.length === 0) { %>
      <p>No blog posts found.</p>
    <% } else { %>
      <div class="row g-4">
        <% posts.forEach(function(post) { %>
          <div class="col-md-3 col-sm-6">
            <div class="blog-card">
              <% if (post.image) { %>
                <img src="/public/uploads/posts_img/<%= post.image %>" alt="<%= post.title %>" class="blog-card-img">
              <% } else { %>
                <img src="/images/default-blog.jpg" alt="<%= post.title %>" class="blog-card-img">
              <% } %>

              <div class="blog-card-body">
                <span class="blog-category"><%= post.category %></span>
                <h5 class="blog-title"><%= post.title %></h5>

                <p class="blog-content">
                  <%= post.content.length > 80 ? post.content.substring(0, 80) + '...' : post.content %>
                </p>

                <div class="d-flex justify-content-between align-items-center blog-meta mb-2">
                  <span><i class="far fa-calendar-alt"></i>
                    <%= post.created_at ? post.created_at.toISOString().slice(0,10) : '' %>
                  </span>
                </div>

               <div class="blog-readmore">
  <a href="/posts/<%= post.slug %>">
    Read More
    <i class="fas fa-arrow-right"></i>
  </a>
</div>

              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</section>
  <%- include("../website/footer") %>
