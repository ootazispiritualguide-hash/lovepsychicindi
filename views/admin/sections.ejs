<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Section Blocks</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .page-title {
      font-weight: 600;
      font-size: 1.4rem;
      margin-bottom: 1rem;
    }
    .section-box {
      background:#fff;
      border-radius:8px;
      padding:15px;
      box-shadow:0 0 10px rgba(0,0,0,.05);
      margin-bottom:20px;
    }
    .section-img {
      width:100%;
      max-height:250px;
      object-fit:cover;
      border-radius:8px;
      border:1px solid #ddd;
    }
    .section-content-title {
      font-weight:600;
      font-size:1.2rem;
      margin-bottom:8px;
    }
    .section-content-text {
      font-size:0.95rem;
      line-height:1.5;
    }
  </style>
</head>
<body>
<%- include('../partials/admin-header') %>
<%- include('../partials/admin-sidebar') %>

<div style="margin-left:240px; padding:24px">
<div class="container-fluid py-4">

  <!-- FLASH messages (optional if you use connect-flash) -->
  <% if (typeof success !== 'undefined' && success.length) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>
  <% if (typeof error !== 'undefined' && error.length) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <!-- Latest section block preview -->
  <div class="section-box mb-4">
    <h5 class="mb-3">Latest Section Preview</h5>

    <% if (sections && sections.length) { %>
      <% const latest = sections[0]; %>
      <div class="row g-3">
        <div class="col-md-4">
          <% if (latest.image) { %>
            <img src="<%= latest.image %>" alt="Section Image" class="section-img">
          <% } else { %>
            <div class="border d-flex align-items-center justify-content-center" style="height:200px;">
              <span class="text-muted">No image</span>
            </div>
          <% } %>
        </div>

        <div class="col-md-8">
          <div class="section-content-title"><%= latest.title %></div>
          <div class="section-content-text"><%= latest.content %></div>
          <div class="text-muted mt-2" style="font-size:0.85rem;">
            Created at: <%= latest.created_at %>
          </div>
        </div>
      </div>
    <% } else { %>
      <p class="text-muted mb-0">No section block created yet. Use the form below to add one.</p>
    <% } %>
  </div>

  <!-- FORM: Add new section block -->
  <div class="section-box">
    <h5 class="mb-3">Add / Update Section Block</h5>

    <form action="/admin/sections" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" name="title" class="form-control" placeholder="Enter title" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Content</label>
        <textarea name="content" class="form-control" rows="4" placeholder="Enter content" required></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label">Image (col-md-4)</label>
        <input type="file" name="image" class="form-control" accept="image/*" required>
        <div class="form-text">Recommended size: landscape image for better layout.</div>
      </div>

      <button type="submit" class="btn btn-primary">Save Section</button>
    </form>
  </div>

  <!-- (Optional) List all sections below -->
  <% if (sections && sections.length > 1) { %>
    <div class="mt-4">
      <h5>All Sections</h5>
      <% sections.forEach(function(sec, idx) { if (idx === 0) return; %>
        <div class="section-box">
          <div class="row g-3">
            <div class="col-md-4">
              <% if (sec.image) { %>
                <img src="<%= sec.image %>" alt="" class="section-img">
              <% } else { %>
                <div class="border d-flex align-items-center justify-content-center" style="height:200px;">
                  <span class="text-muted">No image</span>
                </div>
              <% } %>
            </div>
            <div class="col-md-8">
              <div class="section-content-title"><%= sec.title %></div>
              <div class="section-content-text"><%= sec.content %></div>
              <div class="text-muted mt-2" style="font-size:0.85rem;">
                Created at: <%= sec.created_at %>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
